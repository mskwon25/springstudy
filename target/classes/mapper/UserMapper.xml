<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springstudy.firstdemo.mapper.UserMapper">
	<!-- 학생 -->
    <insert id="registerStudent" parameterType="com.springstudy.firstdemo.model.Student">
		INSERT INTO student(student_id,student_name,student_birthday) VALUES(#{id},#{name},#{dateOfBirth})
	</insert>
    <select id="getStudentById" resultType="com.springstudy.firstdemo.model.Student">
		select * from student where student_id = #{id}
	</select>
    <select id="getAllStudents" resultType="com.springstudy.firstdemo.model.Student">
		SELECT * FROM student
	</select>
	
	<delete id="deleteStudentById">
		delete from student where student_id = #{id}
	</delete>
	
	<delete id="deleteAllStudents">
		DELETE
		FROM student
	</delete>
	
	<!-- 과목 -->
	<insert id="registerSubject" parameterType="com.springstudy.firstdemo.model.Subject">
		INSERT INTO subject(subject_id,subject_name) VALUES(#{id},#{name})
	</insert>
    <select id="getSubjectById" resultType="com.springstudy.firstdemo.model.Subject">
		select * from subject where subject_id = #{id}
	</select>
    <select id="getAllSubjects" resultType="com.springstudy.firstdemo.model.Subject">
		SELECT * FROM subject
	</select>
	
	<delete id="deleteSubjectById">
		delete from subject where subject_id = #{id}
	</delete>
	
	<delete id="deleteAllSubjects">
		DELETE
		FROM subject
	</delete>
	
	<!-- 교수 -->
	<insert id="registerProfessor" parameterType="com.springstudy.firstdemo.model.Professor">
		INSERT INTO professor(pro_id,pro_name,pro_birthday,pro_subject_id) VALUES(#{id},#{name},#{dateOfBirth},#{proSubjectId})
	</insert>
    <select id="getProfessorById" resultType="com.springstudy.firstdemo.model.Professor">
		select * from professor where professor_id = #{id}
	</select>
    <select id="getAllProfessors" resultType="com.springstudy.firstdemo.model.Professor">
		SELECT * FROM professor
	</select>
	
	<delete id="deleteProfessorById">
		delete from professor where professor_id = #{id}
	</delete>
	
	<delete id="deleteAllProfessors">
		DELETE
		FROM professor
	</delete>
</mapper>